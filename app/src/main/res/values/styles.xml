<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="my_fragment_style">
        <item name="android:fontFamily">@font/dmsans_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="login_title_style">
        <item name="android:fontFamily">@font/dmsans_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="activity_title">
        <item name="android:fontFamily">@font/dmsans_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="profile_title">
        <item name="android:fontFamily">@font/dmsans_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#515772</item>
    </style>
    <style name="profile_content">
        <item name="android:fontFamily">@font/dmsans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0D1C36</item>
    </style>

    <style name="news_fragment_title_style">
        <item name="android:fontFamily">@font/dmsans_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="news_fragment_content_style">
        <item name="android:fontFamily">@font/dmsans_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="news_fragment_subcontent_style">
        <item name="android:fontFamily">@font/dmsans_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Animation.CustomPopup" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="CustomSeekbarStyle" >
        <item name="android:maxHeight">10dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/watermelon_red</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress_drawable</item>
        <item name="android:minHeight">10dp</item>
        <item name="thumbColor">@color/white</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--define seekbar the background color of moving bar-->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:angle="270"
                android:centerColor="#11E3E3"
                android:centerY="0.75"
                android:endColor="#11E3E3"
                android:startColor="#11E3E3" />
        </shape>
    </item>

    <!--define seekbar the background color of progress bar-->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <solid android:color="#FD5655"/>
            </shape>
        </clip>
    </item>
</layer-list>
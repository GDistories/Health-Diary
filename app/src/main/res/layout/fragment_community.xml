                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/community_categories"
                android:theme="@style/activity_title" />

            <!--Category Botton Row-->
            <LinearLayout
